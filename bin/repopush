#!/usr/bin/env bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
log_info() {
  echo -e "\n${BLUE}[INFO]${NC} $1"
}

log_success() {
  echo -e "\n${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
  echo -e "\n${YELLOW}[WARNING]${NC} $1"
}

log_error() {
  echo -e "\n${RED}[ERROR]${NC} $1"
}

sleep 0.1
if ! (git diff --exit-code origin/main..main >/dev/null) ||
  ! (git diff --exit-code main >/dev/null) ||
  ! [[ -z "$(git status --porcelain)" ]]; then
  log_info "\nYour local repo has some changes that aren't pushed to origin/main ."
  log_info "\nLet's take care of that for you."
  git add --all
  log_warning "\nPlease add commit message ."
  read -r msg
  git commit -m "$msg - $(date)"
  git push origin main
  log_success "\nRepo up to date with origin/main ."
  exit 1
else
  log_info "\nYour local repo is up to date with origin/main ."
  exit 0
fi
